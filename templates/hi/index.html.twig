{% extends 'base.html.twig' %}

{% block title %}
  Hello HiController!
{% endblock %}

{% block body %}
  <style>
    .example-wrapper {
      margin: 1em auto;
      max-width: 800px;
      width: 95%;
      font: 18px/1.5 sans-serif;
    }
    .example-wrapper code {
      background: #f5f5f5;
      padding: 2px 6px;
    }
  </style>
  <div class="example-wrapper" data-controller="hello">
    Inpu:<input data-action="input->hello#createResult" data-hello-target="data" type="text" />
    <br />
    Output:<div data-hello-target="output" type="text"></div>
  </div>
  <br />
  <div data-controller="slideshow" data-slideshow-index-value="0">
    <button data-action="slideshow#previous">←</button>
    <button data-action="slideshow#next">→</button>

    <div data-slideshow-target="slide">🐵</div>
    <div data-slideshow-target="slide">🙈</div>
    <div data-slideshow-target="slide">🙉</div>
    <div data-slideshow-target="slide">🙊</div>
  </div>
  <br />
  <div data-controller="content-loader" data-content-loader-url-value="{{ url('app_messages') }}">
  {# <button data-action="content-loader#load">click</button> #}
  loading...
  </div>
{% endblock %}
